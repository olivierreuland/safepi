{
  "name": "safepi",
  "version": "1.0.0",
  "description": "A CLI tool for Mozilla Observatory security scans",
  "type": "module",
  "main": "safepi.js",
  "bin": {
    "safepi": "./safepi.js"
  },
  "scripts": {
